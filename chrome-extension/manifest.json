{
  "name": "Contents Downloader Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Chrome Extension for Contents Downloader",
  "content_scripts": [{
    "matches": ["*://*.sankakucomplex.com/*", "*://*.nyaa.si/*"],
    "js": ["scripts/content.js"],
    "css": ["css/style.css"]
  }],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "popup.html"
    ],
    "matches": [
      "*://*.sankakucomplex.com/*",
      "*://*.nyaa.si/*"
    ]
  }],
  "browser_action": {
    "default_title": "Contents Downloader Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://locahost:3000/"
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
